{
  "name": "e-commerce-backend-server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node ./tests/test-connection.js",
    "db:migrate": "dotenv -e .env -- npx sequelize-cli db:migrate",
    "db:migrate:undo": "dotenv -e .env -- npx sequelize-cli db:migrate:undo",
    "db:seed": "dotenv -e .env -- npx sequelize-cli db:seed:all",
    "db:seed:undo": "dotenv -e .env -- npx sequelize-cli db:seed:undo:all",
    "db:reset": "dotenv -e .env -- npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed"
  },
  "author": "Panhseth SUY",
  "license": "ISC",
  "description": "Backend for the electronic store application",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.5"
  }
}
